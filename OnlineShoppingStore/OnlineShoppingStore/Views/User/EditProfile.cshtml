@model OnlineShoppingStore.Models.User
@{
    ViewBag.Title = "EditProfile";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}




<main class="main">
    <nav class="breadcrumb-nav">
        <div class="container">
            <ul class="breadcrumb">
                <li><a href="#"><i class="d-icon-home"></i></a></li>
                <li>Edit profile</li>
            </ul>
        </div>
    </nav>
    <div class="page-content mt-6 pb-2 mb-10">
        <div class="container">
            <div class="login-popup">
                <div class="form-box">
                    <div class="tab tab-nav-simple tab-nav-boxed form-tab">
                        <ul class="nav nav-tabs nav-fill align-items-center border-no justify-content-center mb-5" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link active border-no lh-1 ls-normal" href="#register">Update</a>
                            </li>

                        </ul>
                        <div class="tab-content">
                            <div class="tab-pane active" id="register">

                                @using (Html.BeginForm())
                                {
                                    @Html.HiddenFor(model => model.User_ID);
                                    <div class="form-group">

                                        @Html.ValidationMessageFor(model => model.Email, "", new { style = "font-size:12px; color:red; font-weight:bold;", @readonly = "readonly" })
                                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { type = "email", @class = "form-control", placeholder = "Your Email address *" } })

                                    </div>

                                    <div class="form-group">
                                        @Html.ValidationMessageFor(model => model.Name, "", new { style = "font-size:12px; color:red; font-weight:bold;" })
                                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { type = "text", @class = "form-control", placeholder = "Your full name *" } })

                                    </div>

                                    <div class="form-group">
                                        @Html.ValidationMessageFor(model => model.City, "", new { style = "font-size:12px; color:red; font-weight:bold;" })
                                        @Html.EditorFor(model => model.City, new { htmlAttributes = new { type = "text", @class = "form-control", placeholder = "Your city name" } })

                                    </div>


                                    <div class="form-group">
                                        @Html.ValidationMessageFor(model => model.Password, "", new { style = "font-size:12px; color:red; font-weight:bold;" })
                                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { type = "password", @class = "form-control", placeholder = "Your password" } })

                                    </div>
                                    <div class="form-group">
                                        @Html.ValidationMessageFor(model => model.Confirm_password, "", new { style = "font-size:12px; color:red; font-weight:bold;" })
                                        @Html.EditorFor(model => model.Confirm_password, new { htmlAttributes = new { type = "password", @class = "form-control", placeholder = "Your confirm Password" } })

                                    </div>

                                    <div class="form-group">
                                        @Html.ValidationMessageFor(model => model.Contact_Number, "", new { style = "font-size:12px; color:red; font-weight:bold;" })
                                        @Html.EditorFor(model => model.Contact_Number, new { htmlAttributes = new { type = "number", @class = "form-control", placeholder = "Your number" } })

                                    </div>
                                    <div class="form-group">
                                        @Html.ValidationMessageFor(model => model.Address, "", new { style = "font-size:12px; color:red; font-weight:bold;" })
                                        @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control", placeholder = "Your Address" } })

                                    </div>

                                    @Html.HiddenFor(model => model.Registration_Date)

                                    <input type="submit" class="btn btn-dark btn-block btn-rounded" value="Update" />

                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

