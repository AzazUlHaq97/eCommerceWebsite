@model OnlineShoppingStore.Models.Product

@{
    ViewBag.Title = "AddProduct";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<main>
@using (Html.BeginForm("AddProduct","Admin",FormMethod.Post, new { enctype="multipart/form-data" } ))
{
    <div class="container">
        <div class="page-title-container">
            <div class="row g-0">
                <div class="col-auto mb-3 mb-md-0 me-auto">
                    <div class="w-auto sw-md-30">
                        <a href="#" class="muted-link pb-1 d-inline-block breadcrumb-back">
                            <i data-cs-icon="chevron-left" data-cs-size="13"></i>
                            <span class="text-small align-middle">Products</span>
                        </a>
                        <h1 class="mb-0 pb-0 display-4" id="title">Product Detail</h1>
                    </div>
                </div>
                <div class="w-100 d-md-none"></div>
                <div class="col-auto d-flex align-items-end justify-content-end">
                </div>
                <div class="col col-md-auto d-flex align-items-end justify-content-end">
                    <div class="btn-group ms-1 w-100 w-md-auto">
                        <button type="submit" class="btn btn-outline-primary btn-icon btn-icon-start w-100">
                            <i data-cs-icon="send"></i>
                            <span>Publish</span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xl-12">
                <div class="mb-5">
                    <h2 class="small-title">Product Info</h2>
                    <div class="card">
                        <div class="card-body">
                          
                                <div class="mb-3">
                                    <label class="form-label">Product Name</label>
                                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", placeholder="Enter your product name" } })
                                </div>
                                <div class="mb-3 w-100">
                                    <label class="form-label">Category</label>

                                    @Html.DropDownList("Category_ID",null,htmlAttributes:new { @class="select-single-no-search" })
 

                                </div>

                            <div class="mb-3 w-100">
                                <label class="form-label">Picture</label>

                               <input type="file" name="file" class="form-control"/>


                            </div>

                            
                            <div class="mb-3 w-100">
                                <label class="form-label">Price</label>
                                @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control" } })
                        </div>



                                <div class="mb-3">
                                    <label class="form-label">Short Description</label>
                                   
                                        @Html.EditorFor(model => model.ShortDescription, new { htmlAttributes = new { @class="form-control html-editor-bubble html-editor sh-13", id="quillEditorBubble" } })                                    </div>
                              
                                <div class="mb-3">
                                    <label class="form-label">Long Description</label>
                                    @Html.EditorFor(model => model.LongDescription, new { htmlAttributes = new { @class = "form-control html-editor-bubble html-editor sh-25", id = "quillEditorBubble" } })
                                    
                                </div>
                            
                            <div class="mb-3 w-100">
                                <label class="form-label">In Stock:</label>
                                @Html.EditorFor(model => model.Available_Stock, new { htmlAttributes = new { @class = "form-control" } })
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
</main>